<h2>Search Books</h2>
<form action="/books" method="GET">
    <div>
        <label for="title">Title</label>
        <input type="text" name="title" value="<%= searchOptions.title %>" />
    </div>
    <div>
        <label for="pubAfter">Published After</label>
        <input type="date" name="pubAfter" value="<%= searchOptions.publishedAfter %>" />
    </div>
    <div>
        <label for="pubBefore">Published Before</label>
        <input type="date" name="pubBefore" value="<%= searchOptions.publishedBefore %>" />
    </div>
    <button type="submit">Search</button>
</form>
<br />
<div>
    <% books.forEach(book => { %>
        <div><a href="/books/<%= book.id %>"><%= book.title %></a></div>
    <% }) %>
</div>
