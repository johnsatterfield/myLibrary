<div>
    <label for="title">Title</label>
    <input type="text" name="title" value="<%= book.title %>" />
</div>
<div>
    <label for="author">Author</label>
    <select name="author">
        <% authors.forEach(author => { %>
            <% if (author.id == book.author) { %>
                <option selected label="<%= author.name %>" value="<%= author.id %>" />
            <% } else { %>
                <option label="<%= author.name %>" value="<%= author.id %>" />
            <% } %>
        <% }) %>
    </select>
</div>
<div>
    <label for="published">Publish Date</label>
    <input type="date" name="published" value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>" />
</div>
<div>
    <label for="pages">Page Count</label>
    <input type="number" name="pages" min="1" value="<%= book.pageCount %>" />
</div>
<div>
    <label for="description">Description</label>
    <textarea name="description"><%= book.description %></textarea>
</div>
